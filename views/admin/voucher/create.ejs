<!-- Form tambah data -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="bold">Tambah Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active"><a href="/voucher">Voucher</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col">
            <!-- general form elements -->
            <div class="card card-primary">
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/category/create" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="category">Nama Nominal</label>
                    <input type="text" id="category" class="form-control" placeholder="Masukkan kategori" name="name">
                  </div>
                  <div class="form-group">
                    <label for="category">Status</label>
                    <input type="text" id="category" class="form-control" placeholder="" name="name">
                  </div>
                  <div class="form-group">
                    <label for="category">Thumbnail</label>
                    <input type="text" id="category" class="form-control" placeholder="" name="name">
                  </div>
                  <div class="form-group">
                    <label for="exampleSelectBorder">Kategori</label>
                    <select class="custom-select form-control-border" id="kategory" name="coinName">
                      <% categories.forEach((category) => { %>
                      <option value="<%= category._id %>"><%= category.name %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Multiple</label>
                    <select class="select2" multiple="multiple" data-placeholder="Select a State" style="width: 100%;">
                      <option>Alabama</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="category">User</label>
                    <input type="text" id="category" class="form-control" placeholder="" name="name">
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

            <!-- general form elements -->
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
          <!-- right column -->
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

