<div class="card-body">
    <table id="example2" class="table table-bordered table-hover">
      <thead>
      <tr>
        <th>No</th>
        <th>Nama Game</th>
        <th>Kategori</th>
        <th>Harga Koin</th>
        <th>Status</th>
        <th>Thumbnail</th>
      </tr>
      </thead>
      <tbody>
        <% console.log(voucher) %>
        <% for(let i = 0; i < voucher.length; i++) { %>
          <tr>
            <td><%= i + 1 %> </td>
            <td><%= voucher[i].name %> </td>
            <td><%= voucher[i].category.name %></td>
            <td>
                  <% voucher[i].nominals.forEach(nominal => {  %>
                    <span class="badge badge-warning"> <%= nominal.coinName %> <%= nominal.price %> </span>
                  <% }) %>
            </td>
            <td> <% if(voucher[i].status === "Y") { %>
                <span class="badge badge-success">Aktif</span>
                <% }else { %>
                  <span class="badge badge-danger">Nonaktif</span>    
            <% } %>
            </td>
            <td><img src="/uploads/<%= voucher[i].thumbnail %>" alt="" width="100px" height="100px"></td>
            <td>
              <form action="/voucher/status/<%= voucher[i]._id %>?_method=PUT" method="POST" style="display:inline-block;">
                <% if(voucher[i].status === "Y") { %>
                <button class="btn btn-danger btn-sm">
                  <i class="fas fa-folder"></i>
                  Matikan
                  <% }else{ %>
                    <button class="btn btn-success btn-sm">
                    <i class="fas fa-folder"></i>
                      Nyalakan
                      <% } %> 
                </button>
              </form>
              <form action="/voucher/delete/<%= voucher[i]._id %>?_method=DELETE" method="POST">
                <a href="/voucher/edit/<%= voucher[i]._id %>" class="btn btn-warning">Ubah</a>
                <button type="submit" class="btn btn-danger">Hapus</button>
              </form>
            </td>
          </tr>
        <% } %> 
      </tbody>
    </table>
  </div>