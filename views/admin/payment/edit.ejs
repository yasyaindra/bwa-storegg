<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Form tambah data -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="bold">Ubah Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active"><a href="/nominal">Nominal</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col">
            <!-- general form elements -->
            <div class="card card-primary">
              <!-- /.card-header -->
              <!-- form start -->
              <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="type">Type</label>
                    <input type="text" id="category" class="form-control" placeholder="Masukkan type" name="type" value="<%= payment.type %>">
                  </div>
                  <div class="select2-blue">
                    <select class="form-control select2" multiple="multiple" data-placeholder="Pilih nominal" data-dropdown-css-class="select2-blue" style="width: 100%;" name="banks">
                      <% banks.forEach(bank => { %>
                        <option value="<%= bank._id %>"
                          <% payment.banks.forEach(paymentBank => {  %>
                              <% if(bank._id.toString() === paymentBank._id.toString()) { %>
                                  selected    
                              <% } %> 
                          <% }) %> 
                          ><%= bank.name %> <%= bank.nameBank %> </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
            <!-- /.card -->

            <!-- general form elements -->
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
          <!-- right column -->
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
